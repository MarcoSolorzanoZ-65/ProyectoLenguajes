= form_for @product do |f|
  .form-container
    - if @product.errors.any?
      .error-explanation
        %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
        %ul
          - @product.errors.full_messages.each do |message|
            %li= message

    .form-group.mx-4
      = f.label :name, t('activerecord.attributes.product.name')
      = f.text_field :name, class: "form-input"

    .form-group.mx-4
      = f.label :desc, t('activerecord.attributes.product.desc')
      = f.text_field :desc, class: "form-input"

    .form-group.mx-4
      = f.label :image, t('activerecord.attributes.product.image')
      = f.file_field :image

    .form-group.mx-4
      = f.label :price, t('activerecord.attributes.product.price')
      = f.number_field :price, class: "form-input"

    .form-group.mx-4
      = f.label :status, t('activerecord.attributes.product.status')
      = f.select :status, [[t('activerecord.attributes.product.status_type.active'), true], [t('activerecord.attributes.product.status_type.inactive'), false]], class: "form-select"

    .form-group.mx-4
      = f.label :menu_id, t('activerecord.attributes.product.menu_id')
      = f.text_field :menu_id, class: "form-input"

    .row.mt-4
    .col-3
      = button_tag t('application.save'), class: "btn btn-outline-success btn-block"
    .col-3
      = link_to t('application.back'), products_path, class: "btn btn-secondary btn-block"








