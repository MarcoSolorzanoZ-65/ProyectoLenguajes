%h1= t('application.edit')

= form_for @user, url: user_path(@user) do |f|
  = f.label :email
  = f.text_field :email, class: 'form-control'

  = f.label :password
  = f.password_field :password, class: 'form-control'

  = f.label :password_confirmation
  = f.password_field :password_confirmation, class: 'form-control'

  = f.label :category_id
  = f.collection_select :category_id, Category.all, :id, :category_name, { prompt: 'Seleccione una categor√≠a' }, class: 'form-control'

  = f.label :address
  = f.text_field :address, class: 'form-control'

  = f.label :status, t('activerecord.attributes.user.status')
  = f.collection_select :status, [[true, t('activerecord.attributes.user.status_type.enabled')], [false, t('activerecord.attributes.user.status_type.disabled')]], :first, :last, {}, class: 'form-control'

  = link_to t('application.back'), users_path, class: 'btn btn-secondary'
  = button_tag t('application.save'), class: 'btn btn-outline-success'



